  head
    title Home Profile
    meta(name='description', content='A cool thing made with HyperDev')
    link#favicon(rel='icon', href='https://cdn.glitch.com/1e13a3bc-1423-4884-9df4-f5b7a1e6450e%2Ffavicon.ico?v=1566075175949', type='image/x-icon')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
    link(rel='stylesheet', href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel='stylesheet', href='/public/style.css')
  body
    h1 Glitch Projects
    
    div.container-fluid
      div.row
        div.col-12.text-center
          div.user-avatar.mt-2.mb-2
            img.avatar.mr-2(src=avatar alt=name width='50px')
            span.user #{name} - #{projects.length} projects
   
   
    div.container-fluid
      - projects.sort((a,b)=>new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime())
      each p, index in projects
        div.row
          div.col-3.col-md-6.project-card-img
            img.img-fluid.proj-image(src='https://cdn.glitch.com/project-avatar/' + p.id +'.png')
          div.col-9.col-md-6.project-card-details
            div.proj-details
              p.proj-desc= '#' + (index+1) + ': ' + p.description
              p 
                a(href='http://glitch.com/~' + p.domain target='_blank' ) http://glitch.com/~!{p.domain}
              p.d-none.d-md-block
                span.proj-title= 'Created: '
                span= moment(p.createdAt).format("DD-MM-YYYY,HH:mm")
              p.d-none.d-md-block
                span.proj-title= 'Updated: '
                span= moment(p.updatedAt).format("DD-MM-YYYY,HH:mm")
      else
        div There are no values
        
       
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js') 
